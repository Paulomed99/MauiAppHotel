<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="HospedagemContratada">

    <Grid RowDefinitions="*, Auto">

        <VerticalStackLayout Grid.Row="0" VerticalOptions="Center" Padding="10">

            <Label Text="Suíte Super Luxo" FontSize="50" HorizontalTextAlignment="Center"/>

            <Frame Margin="10" HorizontalOptions="Center">

                <HorizontalStackLayout Spacing="20">

                    <HorizontalStackLayout>
                        <Label Text="Adultos: "/>
                        <Label  Text="2" Margin="10,0,0,0"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Crianças: "/>
                        <Label  Text="2" Margin="10,0,0,0"/>
                    </HorizontalStackLayout>

                </HorizontalStackLayout>
                
            </Frame>

            <Frame Margin="10">

                <Grid ColumnDefinitions="*, *, *" RowDefinitions="Auto, Auto">

                    <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" HorizontalTextAlignment="Center"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" HorizontalTextAlignment="Center"/>
                    <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" HorizontalTextAlignment="Center"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="03/11/2025" HorizontalTextAlignment="Center"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="04/11/2025" HorizontalTextAlignment="Center"/>
                    <Label Grid.Row="1" Grid.Column="2" Text="1" HorizontalTextAlignment="Center"/>

                </Grid>
                
            </Frame>

            <Frame HorizontalOptions="Center">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Valor total:"/>
                    <Label Text="R$ 700,00"/>
                </HorizontalStackLayout>
            </Frame>

            <Button Text="Voltar" Padding="5" Margin="0,10,0,10" HorizontalOptions="Center" Clicked="Button_Clicked"/>

        </VerticalStackLayout>

        <Button Grid.Row="1" Text="Sobre" FontSize="12" HorizontalOptions="Center" VerticalOptions="End" Padding="0,0,0,20" x:Name="btn_sobre" TextColor="{StaticResource Texto}" BackgroundColor="Transparent" BorderWidth="0" Clicked="SobreClicked"/>

    </Grid>


</ContentPage>